# SolidWorks MCP Server Configuration
# Copy this file to .env and update with your values

# SolidWorks Configuration
SOLIDWORKS_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS
SOLIDWORKS_MODELS_PATH=C:/SolidWorks/Models
SOLIDWORKS_MACROS_PATH=C:/SolidWorks/Macros
SOLIDWORKS_VERSION=2024  # Default version to use

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_LOG_LEVEL=INFO
MCP_MAX_CONTEXT_LENGTH=32000

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8057
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_COLLECTION_PREFIX=solidworks

# Authentication (if needed)
MCP_API_KEY=your-api-key-here

# Performance Settings
MAX_CONCURRENT_OPERATIONS=5
OPERATION_TIMEOUT_SECONDS=300
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# File Paths
TEMP_FILES_PATH=./temp
EXPORT_PATH=./exports
LOG_PATH=./logs

# AI/LLM Configuration (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Development Settings
DEBUG=false
RELOAD_ON_CHANGE=true

# Security
ALLOWED_FILE_EXTENSIONS=.sldprt,.sldasm,.slddrw,.swp,.swb
MAX_FILE_SIZE_MB=500
SANDBOX_VBA_EXECUTION=true

# Notification Settings (optional)
WEBHOOK_URL=
SLACK_WEBHOOK=
EMAIL_NOTIFICATIONS=false

# Feature Flags
ENABLE_CHROMADB=true
ENABLE_EVENT_CAPTURE=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_AUTO_SAVE=true

# Version-specific DLL paths
SOLIDWORKS_2021_DLL_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS 2021/api/redist
SOLIDWORKS_2022_DLL_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS 2022/api/redist
SOLIDWORKS_2023_DLL_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS 2023/api/redist
SOLIDWORKS_2024_DLL_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS 2024/api/redist
SOLIDWORKS_2025_DLL_PATH=C:/Program Files/SOLIDWORKS Corp/SOLIDWORKS 2025/api/redist